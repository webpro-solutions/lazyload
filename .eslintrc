{
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "babel"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": "airbnb-base",
  "rules": {
    "array-callback-return": 0,
    "comma-dangle": 0,
    "quotes": ["error", "single"],
    "indent": [
      "error", 2,
      {
        "ArrayExpression": 1,
        "MemberExpression": 1,
        "ObjectExpression": 1,
        "SwitchCase": 1
      }
    ],
    "max-len": 0,
    "arrow-parens": "off",
    "no-confusing-arrow": 0,
    "no-console": 1,
    "no-restricted-globals": 0,
    "no-restricted-syntax": 0,
    "no-unused-expressions": 0,
    "no-unused-vars": 0,
    "prefer-promise-reject-errors": 0,
    "no-param-reassign": ["error", { "props": false }]
  }
}
